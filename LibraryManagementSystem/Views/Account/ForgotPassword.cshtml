@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-light">
                <div class="card-body">
                    <h2 class="card-title text-center text-primary mb-4">
                        <i class="bi bi-lock"></i> Forgot Password
                    </h2>

                    <form method="post">
                        <div class="form-group mb-4">
                            <label for="email" class="form-label">Enter Your Email Address</label>
                            <input type="email" class="form-control form-control-lg" id="email" name="email" required placeholder="you@example.com" />
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Send Reset Code</button>
                        </div>

                        <div class="mt-3 text-center">
                            <p class="text-muted">
                                We will send a reset code to your email. Please check your inbox (and spam folder).
                            </p>
                        </div>
                    </form>

                    <div class="text-center mt-4">
                        <a href="@Url.Action("Login", "Account")" class="btn btn-outline-secondary btn-sm">
                            <i class="bi bi-arrow-left-circle"></i> Back to Login
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
