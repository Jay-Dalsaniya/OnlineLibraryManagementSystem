@model LibraryManagementSystem.Models.BookRental

@{
    Layout = null;
}

<form method="post" asp-action="IssueBook" asp-controller="Reader">
    <h3>@(Model.BookRentalId == 0 ? "Issue Book" : "Re-Issue Book")</h3>

    <div class="form-group">
        <label for="Title">Title</label>
        <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" readonly />
    </div>

    <div class="form-group">
        <label for="Author">Author</label>
        <input type="text" class="form-control" id="Author" name="Author" value="@Model.Author" readonly />
    </div>

    <div class="form-group">
        <label for="Price">Price</label>
        <input type="text" class="form-control" id="Price" name="Price" value="@Model.Price" readonly />
    </div>

    <button type="submit" class="btn btn-success">Submit</button>
</form>
