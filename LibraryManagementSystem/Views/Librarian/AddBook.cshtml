@model LibraryManagementSystem.Models.Books.AddBookViewModel
@{
    ViewData["Title"] = "Add Book";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h3 class="mb-0">📚 Add New Book</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="AddBook" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Title" class="form-control" placeholder="Title">
                                    <label asp-for="Title">Title</label>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Author" class="form-control" placeholder="Author">
                                    <label asp-for="Author">Author</label>
                                    <span asp-validation-for="Author" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="ISBN" class="form-control" placeholder="ISBN">
                                    <label asp-for="ISBN">ISBN</label>
                                    <span asp-validation-for="ISBN" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Price" class="form-control" placeholder="Price">
                                    <label asp-for="Price">Price</label>
                                    <span asp-validation-for="Price" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="PublishedDate" type="date" class="form-control" placeholder="Published Date">
                                    <label asp-for="PublishedDate">Published Date</label>
                                    <span asp-validation-for="PublishedDate" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Genre" class="form-control" placeholder="Genre">
                                    <label asp-for="Genre">Genre</label>
                                    <span asp-validation-for="Genre" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Category" class="form-control" placeholder="Category">
                                    <label asp-for="Category">Category</label>
                                    <span asp-validation-for="Category" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating mb-3">
                                    <input asp-for="Subject" class="form-control" placeholder="Subject">
                                    <label asp-for="Subject">Subject</label>
                                    <span asp-validation-for="Subject" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Condition" class="form-control" placeholder="Condition">
                                    <label asp-for="Condition">Condition</label>
                                    <span asp-validation-for="Condition" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <textarea asp-for="Summary" class="form-control" placeholder="Summary" style="height: 100px;"></textarea>
                                    <label asp-for="Summary">Summary</label>
                                    <span asp-validation-for="Summary" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="TotalCopies" class="form-control" placeholder="Total Copies">
                                    <label asp-for="TotalCopies">Total Copies</label>
                                    <span asp-validation-for="TotalCopies" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Language" class="form-control" placeholder="Language">
                                    <label asp-for="Language">Language</label>
                                    <span asp-validation-for="Language" class="text-danger"></span>
                                </div>

                                <div class="form-floating mb-3">
                                    <input asp-for="Edition" class="form-control" placeholder="Edition">
                                    <label asp-for="Edition">Edition</label>
                                    <span asp-validation-for="Edition" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="BookImage" class="form-label">Book Cover Image</label>
                                    <input asp-for="BookImage" type="file" class="form-control" />
                                    <span asp-validation-for="BookImage" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Dashboard" class="btn btn-secondary">
                                <i class="bi bi-arrow-left-circle"></i> Back to Dashboard
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-book-plus"></i> Add Book
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
